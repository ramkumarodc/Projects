79. Word Search

bool solve(vector<vector<char>>& board, string word, int row, int col, int pos)
{
    bool exist = false;
    if(word.size() == pos)
    {
        exist = true;
    }

    if(row>=0 && row <board.size() && col>=0 && col <board[0].size())
    {
        char temp = board[row][col];
        if(temp == word[pos])
        {
            board[row][col] = '*';
            exist =  solve(board, word, row, col+1, pos+1) ||
                     solve(board, word, row-1, col, pos+1) ||
                     solve(board, word, row+1, col, pos+1) ||
                     solve(board, word, row, col-1, pos+1);
        }
        board[row][col] = temp;
    }
    return exist;
}
bool exist(vector<vector<char>>& board, string word) 
{
    bool ret =  false;
    for(int i=0; i<board.size(); i++)
    {
        for(int j=0; j<board[0].size(); j++)
        {
            if(board[i][j] == word[0])
            {
                if(solve(board, word, i, j, 0)) 
                {
                    return true;    
                }
            }
        }
    }
    return ret;
}

output:
======


board = [["A","B","C","E"],["S","F","C","S"],["A","D","E","E"]]
word ="ABCCED"

board = [["A","B","C","E"],["S","F","C","S"],["A","D","E","E"]]
word="SEE"

board = [["A","B","C","E"],["S","F","C","S"],["A","D","E","E"]]
word = "ABCB"
