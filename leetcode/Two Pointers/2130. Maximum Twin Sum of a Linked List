2130. Maximum Twin Sum of a Linked List

/**
 * Definition for singly-linked list.
 * struct ListNode {
 *     int val;
 *     ListNode *next;
 *     ListNode() : val(0), next(nullptr) {}
 *     ListNode(int x) : val(x), next(nullptr) {}
 *     ListNode(int x, ListNode *next) : val(x), next(next) {}
 * };
 */
class Solution {
public:
    void helper(int& max, ListNode* head, ListNode** start)
    {
        if(head)
        {
            helper(max, head->next, start);
            if(max < head->val+(*start)->val)
            {
                max = head->val+(*start)->val;
            }
            *start = (*start)->next;
        }
    }
    int pairSum(ListNode* head) 
    {
        int max=0;
        ListNode* start = head;
        helper(max, head , &start);
        return max;    
    }
};


int main()
{
	//head = [5,4,2,1]
	ListNode* head = new ListNode(5);
    addNode(4,head);
    addNode(2,head);
    addNode(1,head);
    cout<<pairSum(head);
	return 0;
}

