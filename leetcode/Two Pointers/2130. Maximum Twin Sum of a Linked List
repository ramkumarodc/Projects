int pairSum(ListNode* head) 
    {
        int max=0;
        ListNode* slow = head;
        ListNode* fast = head;

        while(fast)
        {
            fast = fast->next->next;
            slow = slow->next;
        } 

        ListNode *prev = nullptr;
        ListNode *next = nullptr;

        while(slow)
        {
            next = slow->next;
            slow->next = prev;
            prev = slow;
            slow = next;
        }

        while(prev)
        {
            max = std::max(max, head->val+prev->val);
            head= head->next;
            prev = prev->next;
        }
        return max;      
    }
========================================================================

 int pairSum(ListNode* head) 
{
    int max=0;
    ListNode* slow = head;
    ListNode* fast = head;
    ListNode *prev = nullptr;
    ListNode *curr = nullptr;
    while(fast)
    {
        fast = fast->next->next;
        
        curr = slow;

        slow = slow->next;

        curr->next = prev;

        prev = curr;

    } 

    while(slow)
    {
        max = std::max(max, slow->val+prev->val);
        slow = slow->next;
        prev = prev->next;
    }
    return max;      
}
========================================================================
int pairSum(ListNode* head) 
{
    int max=0;
    ListNode* slow = head;
    ListNode* fast = head;
    ListNode *prev = nullptr;
    ListNode *curr = nullptr;
    stack<ListNode*> Stack;
    while(fast)
    {
        Stack.push(slow);
        fast = fast->next->next;
        slow = slow->next;
    } 

    while(slow)
    {
        ListNode *obj = Stack.top(); Stack.pop();
        max = std::max(max, slow->val+obj->val);
        slow = slow->next;
    }
    return max;      
}
