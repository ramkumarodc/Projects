2149. Rearrange Array Elements by Sign

vector<int> rearrangeArray(vector<int>& nums)
    { 
        int n= nums.size();
        vector<int> op(n);
        int posid = 0;
        int negid = 1;
        for(int i=0; i<n; i++)
        {
           if(nums[i]<0)
           {
               op[negid] = nums[i];
               negid+=2;
           }
           else
            {
                op[posid] = nums[i];
                posid +=2;
            }
        }
        return op;
    }
	
Input: nums = [3,1,-2,-5,2,-4]
Output: [3,-2,1,-5,2,-4]