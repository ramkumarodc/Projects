2367. Number of Arithmetic Triplets

Method 1:
int arithmeticTriplets(vector<int>& nums, int diff) 
    {
        /*
        Input: nums = [0,1,4,6,7,10], diff = 3
        constraint: 3 <= nums.length <= 200
        
        loop to n elements
        Read first element 
            check element - diff  and element +diff exist in hash
            if present increae cnt
        add to hash
        */
        int n= nums.size();
        bool mp[210] = {0};
        int first;
        int second;
        int cnt =0;
        for(int i=0; i<n; i++)
        {
            first = nums[i]-diff;
            second = nums[i]-(2*diff);
            if(first > -1 && second >-1)
            {
                if(mp[first] && mp[second])
                {
                    cnt++;
                }
            }
            mp[nums[i]] = true;
        }
        return cnt;
    }
};

Method 2:
int arithmeticTriplets(vector<int>& nums, int diff) 
{
    //exploit the property that the arr is increasing
    int left = 0;
	int right = 0;
    int n = nums.size();
    int result = 0;
    
    for(int i = 0; i < n; ++i)
	{
        while(left < i && nums[i] - nums[left] > diff)
		{
			++left;
		}
        while(right < n && nums[right] - nums[i] < diff)
		{
			++right;
        }
        if(left < i && right < n && nums[i]-nums[left] == diff && nums[right] - nums[i] == diff)
        {
            ++result;
        }
    }
    
    return result;
}


Method 3:
int arithmeticTriplets(vector<int>& nums, int diff) 
{
    int rcnt=0;
    int n=nums.size()-1;
    for(int i=n; i>=0; i--)
    {
        int ti=i;
        int cnt=0;
        for(int j=ti-1; j>=0; j--)
        {
            if(nums[ti]-nums[j]==diff)
            {
                cnt++;
                ti=j;
                if(cnt==2)
                {
                    rcnt++;
                    break;
                }
            }
        }
    }
    return rcnt;
}


int main()
{

	//[4,5,6,7,8,9] diff=2
	

    vector<int> nums = {0,1,4,6,7,10};
    int diff = 3;
    cout<<arithmeticTriplets(nums,3);
    return 0;
}

